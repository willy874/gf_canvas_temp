{
  "include": ["./src/**/*", "types/**/*", "stories/**/*"],
  "compilerOptions": {
    "checkJs": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@base/*": ["./src/*"],
      "@type/*": ["./src/*"]
    },
    "lib": ["es2021", "dom"]
  },
  "exclude": ["./node_modules", "**/node_modules/*"]
}
